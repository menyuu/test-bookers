<h1>Editing Book</h1>

<div>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), local: true, method: :patch, id: "form-area" do |f| %>
  <div class="form">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "text" %>
  </div>
  <div class="form">
    <%= f.label :Body %>
    <%= f.text_area :body, rows: 6, class: "text" %>
  </div>
  <div class="form">
    <%= f.submit "Update Book", class: "submit" %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>